<h1>Persons#edit</h1>
<%= form_for @person, html:{class:"form-horizontal"} do |f| %>
<fieldset>
<legend>Form Person</legend>
<div class="form-group">
  <%= f.label :houseid, class: "col-lg-1 control-label" %>
  <div class="col-lg-4">
    <%= f.text_field :houseid, class: "form-control" %>
  </div>
</div>
<br/>
<div class="form-group">
  <%= f.label :name, class: "col-lg-1 control-label" %>
  <div class="col-lg-4">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<br/>
<div class="form-group">
  <%= f.label :noktp, class: "col-lg-1 control-label" %>
  <div class="col-lg-4">
    <%= f.text_field :noktp, class: "form-control" %>
  </div>
</div>
<br/>
<div class="form-group">
  <%= f.label :birthdate, class: "col-lg-1 control-label" %>
  <div class="col-lg-4">
    <%= f.text_field :birthdate, class: "form-control" %>
  </div>
</div>
<br/>
<%= f.submit :submit, class:"btn btn-primary" %>
</fieldset>
<% end %>
